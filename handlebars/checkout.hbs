<div class="img_top"></div>
<section>
	<h1>Order Details</h1>
	<table>
		<thead>
		<tr>
		<th>Item</th>
		<th></th>
		<th>Quantity</th>
		<th>Price</th>
		</tr>
		</thead>
		<tbody>
			{{#each items}}
			<tr data-id="{{id}}">
				<td><img src="{{imagePath name}}"></td>
				<td>{{name}}</td>
				<td>
					<span class="quantity_modifier">
						<i class="fa fa-minus" aria-hidden="true"></i>
					</span>
					<p>{{quantity}}</p>
					<span class="quantity_modifier">
						<i class="fa fa-plus" aria-hidden="true"></i>
					</span>
				</td>
				<td>${{formatPrice price}}</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
	<p>Total: <span class="total">${{formatPrice total}}</span></p>
	<footer>
		<a href="/">Cancel order</a>
		<form action="/" method="post">
			<input value="ORDER NOW!" class="submit" type="submit">
		</form>
	</footer>
</section>
<div class="img_bottom"></div>
